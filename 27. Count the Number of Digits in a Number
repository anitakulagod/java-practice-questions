import java.util.*;

public class CountDigits {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter a number: ");
        int n = sc.nextInt();

        int count = 0;
        int temp = Math.abs(n);

        do {
            count++;
            temp /= 10;
        } while(temp > 0);

        System.out.println("Number of digits: " + count);
    }
}
